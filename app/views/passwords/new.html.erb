<div class="login-form">
<h2>忘记密码</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <center>
  <%= devise_error_messages! %>
  <fieldset>
    <legend>忘记密码</legend>
     <table>
      <tr>
        <th> <%= f.label "邮箱" %></th>
        <th> <%= f.email_field :email %></th>
      </tr>
      <tr>
        <th>   </th>
        <th><%= f.submit "发送重置密码邮件"%></th>
      </tr>
     </table>
   </fieldset>
<%= link_to "返回", root_path %>

</center>
<% end %>

</div>
