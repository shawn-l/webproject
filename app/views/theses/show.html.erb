<%= content_for :header do %>
  <h1>论文选题系统</h1>
<% end %>
<%= content_for :nav do %>
  <% if current_student %>
   <%= link_to "返回", student_page_path %>
 <% else %>
   <%= link_to "返回", teacher_page_path %>
 <% end %>
<% end %>
<article>
  <header>
    <h3>题目: <%= @thesis.title %></h3>
  </header>
  <h4>简介</h4>
  <div >
    <%= sanitize @thesis.summary, :attributes => %w(id class style) %>
  </div>

  <h4>正文:</h4>
  <%= sanitize @thesis.content,:attributes => %(id class style src) %>
  </p>
  </article>
