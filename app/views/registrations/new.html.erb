<%= content_for :header do %>
  <h1>论文选题系统</h1>
  <h3>管理员页面</h3>
<% end %>
<%= content_for :nav do %>
  <%= link_to "返回", admin_page_path %>
<% end %>
<div class="login-form">

<h2>注册</h2>
<%= devise_error_messages! %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <center>
  <fieldset>
    <legend>注册</legend>
    <table>
     <% if resource.is_a?(Teacher) %>
      <tr>
        <th> <%= f.label "老师Id" %></th>
        <th> <%= f.text_field :tchId %></th>
      </tr>
    <% else %>
      <tr>
        <th> <%= f.label "学生Id" %></th>
        <th> <%= f.text_field :stuId %></th>
      </tr>
    <% end %>
      <tr>
        <th><%= f.label "邮箱" %></th>
        <th><%= f.email_field :email %></th>
      </tr>
      <tr>
        <th><%= f.label "密码" %></th>
        <th><%= f.password_field :password %></th>
      </tr>    
      <tr>
        <th><%= f.label "密码确认" %></th>
        <th><%= f.password_field :password_confirmation %></th>
      </tr>    
      <tr>
        <th>   </th>
        <th><%= f.submit "注册"%></th>
      </tr>
    </table>
  </fieldset>
  <%= link_to "返回", root_path %>
  </center>
<% end %>
</div>

