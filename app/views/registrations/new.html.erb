<%= content_for :header do %>
  <h1>论文选题系统</h1>
  <h3>管理员页面</h3>
<% end %>
<%= content_for :nav do %>
  <%= link_to "返回", admin_page_path %>
<% end %>
<div class="login-form">

<h2>注册</h2>
<%= devise_error_messages! %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:validate => true)  do |f| %>
  <center>
  <fieldset>
    <legend>注册</legend>

    <table>
      <tr>
        <%= show_user_label(resource,f) %>
        <%= show_user_input(resource,f) %>
      </tr>
      <tr>
        <th><%= f.label "邮箱" %></th>
        <th class="th"><%= f.email_field :email %></th>
      </tr>
      <tr>
        <th><%= f.label "密码" %></th>
        <th class="th"><%= f.password_field :password %></th>
      </tr>    
      <tr>
        <th><%= f.label "密码确认" %></th>
        <th class="th"><%= f.password_field :password_confirmation %></th>
      </tr>    
      <tr>
        <th>   </th>
        <th><%= f.submit "注册"%></th>
      </tr>
    </table>
  </fieldset>
  <%= show_return_link_to_user(resource) %>
  </center>
<% end %>
</div>

