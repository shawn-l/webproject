<%= content_for :header do %>
  <h1>论文选题系统</h1>
  <h3>管理员页面</h3>
<% end %>
<%= content_for :nav do %>
  <%= link_to '新建学生', new_registration_path(Student) %>
  <%= link_to "返回", admin_page_path %>
<% end %>
<h2>学生数据</h2>
<table id="data_table" class="display">
  <thead>
  <tr>
    <th>学号</th>
    <th>邮箱</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @students.each do |student| %>
  <tr>
    <td><%= student.stuId %></td>
    <td><%= student.email %></td>
    <td><%= link_to '显示', student %></td>
    <td><%= link_to '删除', student, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>


