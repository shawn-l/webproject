<h1>Listing students</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Hashed password</th>
    <th>Salt</th>
    <th>Name</th>
    <th>Majored</th>
    <th>Grade</th>
    <th>Email</th>
    <th>Sex</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.id %></td>
    <td><%= student.hashed_password %></td>
    <td><%= student.salt %></td>
    <td><%= student.name %></td>
    <td><%= student.majored %></td>
    <td><%= student.grade %></td>
    <td><%= student.email %></td>
    <td><%= student.sex %></td>
    <td><%= student.state %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

