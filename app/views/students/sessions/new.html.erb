<div class="login-form">
<h2>学生登录页面</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <fieldset>
    <legend>学生登录</legend>
  <div><%= f.label "登录" %><br />
  <%= f.text_field :login %></div>

  <div><%= f.label "密码" %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label "记住我" %></div>
  <% end -%>

  <div><%= f.submit "登录" %></div>
<% end %>

<%= render :partial => "students/shared/links" %>
