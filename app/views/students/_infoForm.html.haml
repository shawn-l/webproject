= form_for(@student) do |f|
  %fieldset
    %legend 学生资料
    .field
      = f.label "电子邮箱"
      %br
      = f.email_field :email
    = f.fields_for :student_information do |stu_info|
      .field
        = stu_info.label "姓名" 
        %br
        = stu_info.text_field :name
      .field
        = stu_info.label "专业"
        %br
        = stu_info.select :major_id, Major.all.collect {|m| [m.name, m.id]}
      .filed
        = stu_info.label "年级"
        %br
        = stu_info.text_field :grade
      .field
        = stu_info.label "性别"
        = stu_info.select :sex,["男","女"]
    .actions
      = f.submit

