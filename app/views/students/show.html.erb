<%= content_for :header do %>
  <h1>论文选题系统</h1>
<% end %>
<%= content_for :nav do %>
  <%= nav_link_for_student %>
<% end %>
<p id="notice"><%= notice %></p>

<p>
  <b>学号:</b>
  <%= @student.stuId %>
</p>
<p>
  <b>邮箱:</b>
  <%= @student.email %>
</p>
<p>
  <b>姓名:</b>
  <%= @student.student_information.name %>
</p>

<p>
  <b>专业:</b>
  <%= @student.student_information.major.name if !@student.student_information.major.nil?%>
</p>

<p>
  <b>年级:</b>
  <%= @student.student_information.grade %>
</p>

<p>
  <b>性别:</b>
  <%= @student.student_information.sex %>
</p>


