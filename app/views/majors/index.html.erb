<%= content_for :header do %>
  <h1>论文选题系统</h1>
  <h3>管理员页面</h3>
<% end %>
<%= content_for :nav do %>
  <%= link_to "新建专业", new_major_path %>
  <%= link_to "返回", admin_page_path %>
<% end %>
<h2>专业数据</h2>

<table id="data_table" class="display">
  <thead>
  <tr>
    <th>专业名称</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @majors.each do |major| %>
  <tr>
    <td><%= major.name %></td>
    <td><%= link_to '显示', major %></td>
    <td><%= link_to '编辑', edit_major_path(major) %></td>
    <td><%= link_to '删除', major, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
<%= link_to '新专业', new_major_path %>
