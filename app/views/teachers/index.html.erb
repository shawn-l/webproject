<h1>Listing teachers</h1>

<table>
  <tr>
    <th>Tchid</th>
    <th>Name</th>
    <th>Department</th>
    <th>Email</th>
    <th>Sex</th>
    <th>State</th>
    <th></th>
    <th></th>
  </tr>

<% @teachers.each do |teacher| %>
  <tr>
    <td><%= teacher.tchId %></td>
    <td><%= teacher.name %></td>
    <td><%= teacher.department %></td>
    <td><%= teacher.email %></td>
    <td><%= teacher.sex %></td>
    <td><%= teacher.state %></td>
    <td><%= link_to 'Show', teacher %></td>
    <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
    <td><%= link_to 'Destroy', teacher, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Teacher', new_teacher_registration_path %>
<% if teacher_signed_in? %>
  <%= current_teacher.tchId %>
  <%= link_to 'Logout', destroy_teacher_session_path, :method=> :delete %>
<% else %>
  <%= link_to 'Login', new_teacher_session_path %>
<% end %>
