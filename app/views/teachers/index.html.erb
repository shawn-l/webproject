<%= content_for :header do %>
  <h1>论文选题系统</h1>
  <h3>管理员页面</h3>
<% end %>
<%= content_for :nav do %>
  <%= link_to '新建老师', new_registration_path(Teacher) %>
  <%= link_to "返回", admin_page_path %>
<% end %>
<h2>老师数据</h2>

<table id="data_table" class="display">
  <thead>
  <tr>
    <th>老师编号</th>
    <th>邮箱</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @teachers.each do |teacher| %>
  <tr>
    <td><%= teacher.tchId %></td>
    <td><%= teacher.email %></td>
    <td><%= link_to '显示', teacher %></td>
    <td><%= link_to '删除', teacher, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>



