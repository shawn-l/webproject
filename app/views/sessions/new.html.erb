<div class="login-form"> 
  <h2>登录页面</h2>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <center>
  <fieldset>
    <legend>登录</legend>
    <table>
      <tr>
        <th> <%= f.label "登录" %></th>
        <th> <%= f.text_field :login %></th>
      </tr>
      <tr>
        <th><%= f.label "密码" %></th>
        <th><%= f.password_field :password %></th>
      </tr>
      <tr>
        <th>   </th>
        <th><%= f.submit "登录"%><%= f.check_box :remember_me %><%= f.label "记住我" %></th>
      </tr>
          </table>
  </fieldset>
<%= render :partial => "shared/links" %>
</center>
<% end %>
</div>

